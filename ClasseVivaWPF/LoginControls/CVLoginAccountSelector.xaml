<shared:Injectable x:Class="ClasseVivaWPF.LoginControls.CVLoginAccountSelector"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                   xmlns:local="clr-namespace:ClasseVivaWPF.LoginControls"
                   xmlns:shared="clr-namespace:ClasseVivaWPF.SharedControls"
                   xmlns:themes="clr-namespace:ClasseVivaWPF.Utils.Themes"
                   mc:Ignorable="d" Background="#BF000000"
                   d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel d:Background="#FFFFFFFF" Background="{themes:ThemeBinding Path=CVGenericBackground}" Width="400" VerticalAlignment="Center">
        <StackPanel Margin="10">
            <TextBlock Margin="32,0,0,0" Text="Scegli l'account da utilizzare come principale" TextWrapping="Wrap" FontSize="20" VerticalAlignment="Center" Grid.Row="0" Grid.ColumnSpan="2" Grid.Column="0"></TextBlock>
            <StackPanel x:Name="Choices"></StackPanel>
        </StackPanel>
    </DockPanel>

</shared:Injectable>
