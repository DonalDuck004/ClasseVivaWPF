<UserControl x:Class="ClasseVivaWPF.CVMainNavigation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClasseVivaWPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="{x:Static local:Config.HEADER_HEIGHT_GL}"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="64"></RowDefinition>
        </Grid.RowDefinitions>
        <DockPanel DockPanel.Dock="Top" Background="Red" Grid.Row="0">
            <Border Grid.ColumnSpan="2" Width="32" Height="32" CornerRadius="100" Background="White" Margin="7,0,0,0"></Border>
            <Label Content="Classeviva *logo*" Foreground="White" FontSize="20" VerticalAlignment="Center"></Label>
        </DockPanel>
        <DockPanel Name="Current" Grid.Row="1"></DockPanel>
        <Grid Grid.Row="2" Background="White" x:Name="wp_buttons"></Grid>
    </Grid>
</UserControl>
