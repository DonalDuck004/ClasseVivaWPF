<UserControl x:Class="ClasseVivaWPF.SharedControls.CVImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:root="clr-namespace:ClasseVivaWPF"
             xmlns:local="clr-namespace:ClasseVivaWPF.SharedControls"
             xmlns:themes="clr-namespace:ClasseVivaWPF.Themes.Xaml"
             mc:Ignorable="d"
             d:DesignHeight="820" d:DesignWidth="800">
    <StackPanel Name="stack" Margin="0,10,0,10">
        <Border Height="{Binding Path=ActualWidth, ElementName=stack}"
                Width="{Binding Path=ActualWidth, ElementName=stack}"
                d:Background="#FFC62828" Background="{themes:ThemeBinding Path=CVGenericRed}" x:Name="wp" CornerRadius="30" Cursor="Hand">
        </Border>
    </StackPanel>
</UserControl>
