<UserControl x:Class="ClasseVivaWPF.HomeControls.MenuSection.CVExtraHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:ClasseVivaWPF.Utils.Converters"
             xmlns:local="clr-namespace:ClasseVivaWPF.HomeControls.MenuSection"
             mc:Ignorable="d" Cursor="Hand" MouseLeftButtonDown="OnSelected"
             d:DesignHeight="80" d:DesignWidth="240">
    <UserControl.Resources>
        <converters:ColorIfConverter x:Key="SelectedConverter" FalseColor="{StaticResource ResourceKey=CV_RED_COLOR}" TrueColor="White"></converters:ColorIfConverter>
    </UserControl.Resources>

    <Border CornerRadius="25" BorderThickness="2" BorderBrush="White" Background="{Binding Selected, Converter={StaticResource SelectedConverter}}">
        <DockPanel Background="Transparent">
            <Label Content="{Binding HeaderText}" Foreground="{Binding Selected, Converter={StaticResource SelectedConverter}, ConverterParameter=swap}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24"></Label>
        </DockPanel>
    </Border>
</UserControl>
