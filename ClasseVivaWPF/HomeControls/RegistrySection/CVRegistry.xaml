<UserControl x:Class="ClasseVivaWPF.HomeControls.RegistrySection.CVRegistry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClasseVivaWPF.HomeControls.RegistrySection"
             xmlns:shared="clr-namespace:ClasseVivaWPF.SharedControls"
             mc:Ignorable="d" 
             Loaded="OnLoad"
             Name="control"
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="StackPanel" x:Key="WaitForDataFetching">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=DataFetched, ElementName=control}" Value="False">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard x:Name="loading">
                            <Storyboard>
                                <DoubleAnimation AutoReverse="True" Storyboard.TargetProperty="Opacity" From="0" To="1" RepeatBehavior="Forever" Duration="0:0:1"></DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                    <DataTrigger.ExitActions>
                        <RemoveStoryboard BeginStoryboardName="loading"></RemoveStoryboard>
                    </DataTrigger.ExitActions>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <ScrollViewer
        shared:CVScollerView.IsEnabled="True"
        shared:CVScollerView.CatchWidthProperty="False"
        VerticalScrollBarVisibility="Hidden"
        HorizontalScrollBarVisibility="Disabled">
        <StackPanel x:Name="wp" Background="#C62828">
            <Rectangle Fill="Black" Opacity="0.2" Height="1"></Rectangle>
            <Border Margin="10,10,10,5" Background="White" CornerRadius="25">
                <StackPanel Style="{StaticResource ResourceKey=WaitForDataFetching}" Height="{Binding Path=ActualHeight, ElementName=wp, Converter={StaticResource ResourceKey=DivisionConverter}, ConverterParameter=1.6}">
                    <Grid Name="upper_grid">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="{Binding Path=ActualHeight, ElementName=upper_grid, Converter={StaticResource ResourceKey=DivisionConverter}, ConverterParameter=1.5}"></RowDefinition>
                            <RowDefinition Height="96"></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <shared:CVProgressEllipse
                                    Grid.Column="0" 
                                    Margin="16"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Desc="Media Totale"
                                    Min="0" Max="10" 
                                    x:Name="AvgArc">
                                </shared:CVProgressEllipse>

                                <DockPanel Grid.Column="1" Name="c2">
                                    <StackPanel DockPanel.Dock="Left" Margin="0,20,0,0" Orientation="Vertical">
                                        <StackPanel.Resources>
                                            <Style TargetType="shared:CVPeriodPercentage">
                                                <Setter Property="DockPanel.Dock" Value="Top"></Setter>
                                                <Setter Property="Height" Value="64"></Setter>
                                                <Setter Property="Min" Value="0"></Setter>
                                                <Setter Property="Max" Value="10"></Setter>
                                                <Setter Property="Width" Value="{Binding Path=ActualWidth, ElementName=c2}"></Setter>
                                            </Style>
                                        </StackPanel.Resources>
                                        <DockPanel x:Name="pps">
                                            <shared:CVPeriodPercentage Desc="Caricamento..."/>
                                            <shared:CVPeriodPercentage Desc="Caricamento..."/>
                                        </DockPanel>
                                    </StackPanel>
                                </DockPanel>
                            </Grid>

                            <DockPanel Grid.Column="1" Margin="0,20,0,0">
                                <local:CVColumnsGraph x:Name="Graph"></local:CVColumnsGraph>
                            </DockPanel>
                        </Grid>
                        <StackPanel Grid.Row="1">
                            <Label Content="Ultimi voti" FontSize="16"></Label>
                            <ScrollViewer Height="64" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Disabled">
                                <StackPanel Orientation="Horizontal">

                                </StackPanel>
                            </ScrollViewer>
                        </StackPanel>
                        <StackPanel Grid.Row="2">
                            <Label Content="Assenze/Ritardi" FontSize="16"></Label>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
            <Grid Margin="0,0,0,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="52"></RowDefinition>
                    <RowDefinition Height="52"></RowDefinition>
                    <RowDefinition Height="52"></RowDefinition>
                    <RowDefinition Height="52"></RowDefinition>
                    <RowDefinition Height="52"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <local:CVRegistryOption Grid.Column="0" Grid.Row="0" Margin="10,5,5,5"></local:CVRegistryOption>
                <local:CVRegistryOption Grid.Column="1" Grid.Row="0" Margin="5,5,10,5"></local:CVRegistryOption>
                <local:CVRegistryOption Grid.Column="0" Grid.Row="1" Margin="10,5,5,5"></local:CVRegistryOption>
                <local:CVRegistryOption Grid.Column="1" Grid.Row="1" Margin="5,5,10,5"></local:CVRegistryOption>
                <local:CVRegistryOption Grid.Column="0" Grid.Row="2" Margin="10,5,5,5"></local:CVRegistryOption>
                <local:CVRegistryOption Grid.Column="1" Grid.Row="2" Margin="5,5,10,5"></local:CVRegistryOption>
                <local:CVRegistryOption Grid.Column="0" Grid.Row="3" Margin="10,5,5,5"></local:CVRegistryOption>
                <local:CVRegistryOption Grid.Column="1" Grid.Row="3" Margin="5,5,10,5"></local:CVRegistryOption>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
