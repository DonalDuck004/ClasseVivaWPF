<UserControl x:Class="ClasseVivaWPF.HomeControls.RegistrySection.CVGradeEllipse"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClasseVivaWPF.HomeControls.RegistrySection"
             mc:Ignorable="d"
             d:DesignHeight="64" d:DesignWidth="64">
    <Border BorderThickness="{Binding Path=ActualHeight, Converter={StaticResource DivisionConverter}, ConverterParameter=7}"
            BorderBrush="{Binding Path=Grade.InternalColor, Converter={StaticResource ToBrushConverter}}"
            Background="{Binding Path=BackgroundEllipseColor, Converter={StaticResource ToBrushConverter}}" 
            CornerRadius="100" 
            Width="{Binding Path=ActualHeight}" 
            MaxWidth="{Binding Path=ActualHeight}" 
            Height="{Binding Path=ActualHeight}">
        <Border.ToolTip>
            <ToolTip>
                <TextBlock Text="{Binding Path=ToolTipText}"></TextBlock>
            </ToolTip>
        </Border.ToolTip>
        <TextBlock
            Foreground="{Binding Path=Grade.InternalColor, Converter={StaticResource ToBrushConverter}}"
            FontSize="22"
            FontWeight="DemiBold"
            TextAlignment="Center"
            Text="{Binding Path=Grade.DisplayValue}" 
            VerticalAlignment="Center" 
            HorizontalAlignment="Center">
        </TextBlock>
    </Border>
</UserControl>
