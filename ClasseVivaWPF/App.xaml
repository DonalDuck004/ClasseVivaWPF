                                                             RelativeSource={RelativeSource TemplatedParent},
                                                             Converter={StaticResource ResourceKey=SelectedConverter}}"
                                        Template="{Binding Icon, RelativeSource={RelativeSource TemplatedParent}}"
                                        HorizontalAlignment="Center"/>
                    </StackPanel>
                    <Label Grid.Row="2" x:Name="desc"
                           Content="{Binding IconValue, 
                                             RelativeSource={RelativeSource TemplatedParent}}"
                           Foreground="{Binding IsSelected, 
                                                RelativeSource={RelativeSource TemplatedParent},
                                                Converter={StaticResource ResourceKey=SelectedConverter}}" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top" FontSize="11">
                        <Label.Resources>
                            <Style TargetType="Label">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource TemplatedParent}}" Value="True">
                                        <DataTrigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="FontSize" From="10" To="15" Duration="0:0:0.15"></DoubleAnimation>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.EnterActions>
                                        <DataTrigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="FontSize" To="10" Duration="0:0:0.15"></DoubleAnimation>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.ExitActions>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Label.Resources>

                    </Label>
                </Grid>
            </StackPanel>
        </ControlTemplate>

